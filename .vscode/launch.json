    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/sketch_maple_mini_test.ino.elf",
            "name": "Debug Microcontroller",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "/home/pavkriz/.platformio/packages/tool-openocd/scripts/board/stm32f3discovery.cfg"
            ],
            "device": "STM32F303RE",
            "showDevDebugOutput": true
        },
        {
            "name": "Arduino",
            "type": "arduino",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "targetArchitecture": "arm",
            "miDebuggerPath": "/home/pavkriz/.platformio/packages/toolchain-gccarmnoneeabi/bin/arm-none-eabi-gdb",
            "debugServerPath": "/home/pavkriz/.platformio/packages/tool-openocd/bin/openocd",
            "debugServerArgs": "-f /home/pavkriz/.platformio/packages/tool-openocd/scripts/board/stm32f3discovery.cfg",
            "xxxcustomLaunchSetupCommands": [],
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:3333"
                },
                {
                    "text": "file \"${file}\""
                },
                {
                    "text": "load"
                },
                {
                    "text": "monitor reset halt"
                },
                {
                    "text": "monitor reset init"
                }
            ],
            "stopAtEntry": true,
            "serverStarted": "Info\\ :\\ [\\w\\d\\.]*:\\ hardware",
            "launchCompleteCommand": "exec-continue",
            "filterStderr": true,
            "args": []
        }
    ]
}